root = true

[*]
charset = utf-8
max_line_length = 120
end_of_line = lf
insert_final_newline = true
indent_style = space

[{*.md, *.mdx}]
indent_size = 2
trim_trailing_whitespace = false

[{*.js, *.ts, *.cjs, *.mjs, *.html, *.css, *.astro, *.styl, *.svelte}]
indent_size = 2

[{*.json, .prettierrc}]
indent_size = 4
